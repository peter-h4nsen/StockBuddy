<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ButtonMenuBarStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="#5C2F1C" />
        <Setter Property="Padding" Value="1,0" />
    </Style>

    <Style x:Key="BottomViewPanelStyle" TargetType="{x:Type StackPanel}">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="20" />
    </Style>

    <Style x:Key="ViewBoxStyle1" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="#3B1B10" />
        <Setter Property="BorderBrush" Value="#5E2B19" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style x:Key="ViewBoxStyle2" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="#4A230D" />
        <Setter Property="BorderBrush" Value="#612F11" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

</ResourceDictionary>