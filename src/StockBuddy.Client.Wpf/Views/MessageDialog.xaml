<Window x:Class="StockBuddy.Client.Wpf.Views.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        SizeToContent="Height" Width="500"
        Background="#51A3F5">

    <Grid Margin="15,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Style="{StaticResource ColoredTextBlockStyle}"
                   Text="Information"
                   FontSize="20"
                   Margin="0,5,0,10"/>

        <TextBlock Style="{StaticResource ColoredTextBlockStyle}"
                   Text="{Binding Message, FallbackValue='dIsAsync=asd dasdas das sdasda sda as asasasass  sdasdsda asd daasasasd'}"
                   TextWrapping="Wrap"
                   FontSize="14"
                   Grid.Row="1" />

        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    HorizontalAlignment="Right"
                    Margin="0,25,0,0">

            <Button Content="OK" 
                    Padding="5" 
                    MinWidth="100"
                    Click="okBtn_Click" />
        </StackPanel>
    </Grid>
</Window>
